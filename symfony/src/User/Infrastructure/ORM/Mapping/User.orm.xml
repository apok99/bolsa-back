<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\User\Domain\Model\User"
            repository-class="App\User\Infrastructure\Domain\Model\DoctrineUserRepository"
    >
        <unique-constraints>
            <unique-constraint name="email_uq" columns="email"/>
        </unique-constraints>

        <id name="id" type="uuid_binary"/>
        <field name="username" unique="true"/>
        <embedded name="email" class="App\Shared\Domain\ValueObject\Email" use-column-prefix="false" />
        <field name="password" nullable="true"/>
        <field name="roles" type="json"/>
        <field name="acceptedAt" type="carbon_immutable" nullable="true" />
        <field name="createdAt" type="carbon_immutable"/>
        <field name="updatedAt" type="carbon_immutable"/>
        <field name="deletedAt" type="carbon_immutable" nullable="true"/>
    </entity>
</doctrine-mapping>
